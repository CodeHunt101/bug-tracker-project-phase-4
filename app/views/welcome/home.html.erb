<div class="container" role="main">
  <div>
    <div style="font-size: 1rem; color: DarkGreen">
      <i class="fas fa-bug fa-10x"></i>
    </div>
    <h1>Welcome to Bug Tracker</h1>
  </div>
</div>

<%if !current_user%>

  <% if flash[:message] %>
    <div>
      <p><%= flash[:message] %></p>
    </div>
  <% end %>

  <div>
    <p>Please enter your login details</p>
  </div>

  <%= form_tag({controller: 'sessions', action: 'create', method: 'post'}) do %>

    <div>
      <%= label_tag :email%>
      <%= text_field_tag :email %>
    </div>

    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div>
      <%= submit_tag "Sign In" %>
    </div>

  <% end %> 
<% end %> 