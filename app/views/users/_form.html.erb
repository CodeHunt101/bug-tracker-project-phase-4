<% if flash[:message] %>
  <div>
    <p class="flash-correct"><%= flash[:message] %></p>
  </div>
<% end %>

<div class="form-container">
  <%= simple_form_for user do |f| %>
    
    <div class="mb-3">
    <%= f.input :first_name, label: 'Enter first name: ', label_html: {class: "form-label"}, input_html: {class: "form-control"} %>
    </div>
    <div class="mb-3">
    <%= f.input :last_name, label: 'Enter last name: ', label_html: {class: "form-label"}, input_html: {class: "form-control"} %>
    </div>
    <div class="mb-3">
    <%= f.input :role_id, label: 'Select role: ' ,collection: roles, label_html: {class: "form-label"}, input_html: {class: "form-control"} %>
    </div>
    <div class="mb-3">
    <%= f.input :email, label: 'Enter email: ', label_html: {class: "form-label"}, input_html: {class: "form-control"} %>
    </div>
    <div class="mb-3">
    <%= f.input :password, label: 'Enter password: ', label_html: {class: "form-label"}, input_html: {class: "form-control"} %>
    </div>
    <div class="mb-3">
    <%= f.input :password_confirmation, label: 'Confirm password: ', label_html: {class: "form-label"}, input_html: {class: "form-control"} %>
    </div>
    <div>
    <%= f.button :submit, class:"btn btn-success" %>
    </div>
  <% end %>
</div>