<%= simple_form_for @user do |f| %>
  <%= f.input :first_name, label: 'Enter first name: ', error: 'Mandatory field, please enter first name' %>
  <%= f.input :last_name, label: 'Enter last name: ', error: 'Mandatory field, please enter last name' %>
  <%= f.input :role_id, label: 'Select role: ' ,collection: Role.all %>
  <%= f.input :email, label: 'Enter email: ', error: 'Mandatory field, please enter email' %>
  <%= f.input :password, label: 'Enter password: ', error: 'Mandatory field, please enter a password' %>
  <%= f.input :password_confirmation, label: 'Confirm password: ', error: 'Passwords do not match' %>
  <%= f.button :submit %>

<% end %>