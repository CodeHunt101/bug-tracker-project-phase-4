<% if flash[:message] %>
  <div>
    <p><%= flash[:message] %></p>
  </div>
<% end %>
<%= simple_form_for project, url: "/users/#{current_user.id}/projects/#{params[:id]}" do |f| %>
  
  <% if project.errors.any? %>
    <div id="error_explanation">
      <p>
        <%= pluralize(project.errors.count, "error") %>
        prohibited this project from being saved:
      </p>

      <ul>
      <% project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :title, label: 'Enter project title: ', input_html: { value: @prev_params_title || project.title  } %>
  <%= f.input :description, label: 'Enter project description: ', input_html: { value: @prev_params_description || project.description }  %>
  <%if current_user.role_name == "Project Manager"%>
    <%= f.hidden_field :project_manager_id %>
  <%end%>
  <%if current_user.role_name == "Admin"%>
    <%= f.association :project_manager, collection: project_managers, label_method: :email, value_method: :id%> 
  <%end%>
  <%= f.association :lead_developer, collection: lead_developers, label_method: :email, value_method: :id%> 
  <%= f.button :submit %>
<% end %>