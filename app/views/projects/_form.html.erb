<% if flash[:message] %>
  <div>
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<%= simple_form_for project, url: "/users/#{current_user.id}/projects/#{params[:id]}" do |f| %>
  <%= f.input :title, label: 'Enter project title: ', input_html: { value: project.title || @prev_params_title } %>
  <%= f.input :description, label: 'Enter project description: ', input_html: { value: project.description || @prev_params_description }  %>
  <%= f.hidden_field :project_manager_id %>
  <%= f.association :lead_developer, collection: lead_developers, label_method: :email, value_method: :id%> 
  <%= f.button :submit %>
<% end %>